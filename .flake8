[flake8]
max-line-length = 88
extend-ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    E402,  # module level import not at top of file (common in __init__.py)
    F401,  # imported but unused (handled by autoflake/isort)
    
exclude = 
    .git,
    __pycache__,
    .venv,
    .pytest_cache,
    qdrant_storage,
    .vscode,
    build,
    dist,
    *.egg-info

per-file-ignores =
    __init__.py:F401,F403
    test_*.py:F401,F403,S101
    tests/*:F401,F403,S101
    
max-complexity = 10
