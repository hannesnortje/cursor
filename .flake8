[flake8]
max-line-length = 88
extend-ignore =
    E203,
    E501,
    W503,
    E402,
    F401

exclude =
    .git,
    __pycache__,
    .venv,
    .pytest_cache,
    qdrant_storage,
    .vscode,
    build,
    dist,
    *.egg-info

per-file-ignores =
    __init__.py:F401,F403
    test_*.py:F401,F403,S101
    tests/*:F401,F403,S101

max-complexity = 10
