# AI Agent System - Enhanced Security Configuration
# Copy this file to .env and customize the values

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================
MCP_SERVER_NAME=enhanced-mcp-server
MCP_SERVER_PORT=5007
MCP_SERVER_HOST=localhost
MCP_LOG_LEVEL=INFO

# =============================================================================
# API KEYS & EXTERNAL SERVICES
# =============================================================================

# AutoGen API Configuration
AUTOGEN_API_KEY=your_autogen_api_key_here
AUTOGEN_API_BASE=https://api.autogen.com/v1

# OpenAI API (for AutoGen integration)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1

# Anthropic API (for Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_API_BASE=https://api.anthropic.com/v1

# Google API (for Gemini models)
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_API_BASE=https://generativelanguage.googleapis.com/v1

# xAI API (for Grok models)
XAI_API_KEY=your_xai_api_key_here
XAI_API_BASE=https://api.x.ai/v1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Qdrant Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION_PREFIX=ai_agent_system
ENABLE_VECTOR_DB=false

# Redis (for message queue and caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# =============================================================================
# DOCKER & CONTAINER SERVICES
# =============================================================================

# Docker Ollama (offline LLM processing)
OLLAMA_URL=http://localhost:11434
OLLAMA_API_KEY=your_ollama_api_key_here
ENABLE_DOCKER_OLLAMA=false

# Docker Qdrant
QDRANT_DOCKER_IMAGE=qdrant/qdrant:latest
QDRANT_DOCKER_PORT=6333

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret for session management
JWT_SECRET_KEY=your_jwt_secret_key_here_minimum_32_characters
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption keys
ENCRYPTION_KEY=your_32_character_encryption_key_here
ENCRYPTION_ALGORITHM=AES-256-GCM

# API Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=20

# =============================================================================
# AGENT SYSTEM CONFIGURATION
# =============================================================================

# Agent Limits
MAX_CONCURRENT_AGENTS=5
AGENT_TIMEOUT=30000
AGENT_MEMORY_LIMIT_MB=512
AGENT_CPU_LIMIT_PERCENT=50

# Agent Features
ENABLE_COORDINATOR=true
ENABLE_SPECIALIZED_AGENTS=false
AGENT_AUTO_START=false

# Agent Security
AGENT_ISOLATION_ENABLED=true
AGENT_SANDBOX_ENABLED=true
AGENT_NETWORK_ISOLATION=true

# =============================================================================
# LLM INTEGRATION CONFIGURATION
# =============================================================================

# LLM Providers
ENABLE_CURSOR_LLM=true
DEFAULT_MODEL=cursor-auto

# Model Selection Strategy
LLM_SELECTION_STRATEGY=auto
LLM_FALLBACK_ENABLED=true
LLM_TIMEOUT_SECONDS=60

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Dashboard Backend
DASHBOARD_BACKEND_PORT=5000
DASHBOARD_BACKEND_HOST=localhost

# WebSocket Communication
WEBSOCKET_PORT=4000
WEBSOCKET_HOST=localhost

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Logging Configuration
LOG_TO_FILE=false
LOG_FILE_PATH=logs/mcp_server.log
LOG_FORMAT=json
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=30

# Security Logging
SECURITY_LOG_LEVEL=WARNING
SECURITY_LOG_FILE_PATH=logs/security.log

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Environment
ENVIRONMENT=development
DEBUG=false
TESTING=false

# Cursor Integration
CURSOR_WORKSPACE_PATH=/path/to/your/workspace
CURSOR_CONFIG_PATH=/path/to/cursor/config

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# GitHub Integration (for Git Agent)
GITHUB_TOKEN=your_github_token_here
GITHUB_API_BASE=https://api.github.com

# GitLab Integration (alternative to GitHub)
GITLAB_TOKEN=your_gitlab_token_here
GITLAB_API_BASE=https://gitlab.com/api/v4

# =============================================================================
# PERFORMANCE & SCALING
# =============================================================================

# Performance Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=100
CONNECTION_POOL_SIZE=10
REQUEST_TIMEOUT_SECONDS=30

# Scaling Configuration
AUTO_SCALING_ENABLED=false
MIN_AGENT_INSTANCES=1
MAX_AGENT_INSTANCES=10
SCALE_UP_THRESHOLD=80
SCALE_DOWN_THRESHOLD=20
